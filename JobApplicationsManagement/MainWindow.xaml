<Window x:Class="JobApplicationsManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JobApplicationsManagement"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10,10,10,10" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label x:Name="demoLabel" Content="Default content" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="demoButton" Content="Click Me!" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75" Click="demoButton_Click"/>
            <Label x:Name="hiddenLabel" Content="" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </StackPanel>

    </Grid>
</Window>
